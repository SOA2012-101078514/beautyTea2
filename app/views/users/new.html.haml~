%h1 Sign Up

= form_for @user do |f|
  - if @user.errors.any?
    #error_messages
      %h2 
        = pluralize(@user.errors.count, "error")
        Form is invalid:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field       
    %strong
      = f.label :Name
    %br/
    = f.text_field :name

    %br/
    %br/    
    %strong
      = f.label :"Phone Number"
    %br/
    = f.text_field :phone

    %br/
    %br/    
    %strong
      = f.label :"Confirm Phone Number"
    %br/
    = f.text_field :phone_confirmation

    %br/
  .confirm_button
    = f.submit
          
          

