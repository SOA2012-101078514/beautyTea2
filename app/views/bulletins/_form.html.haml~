= stylesheet_link_tag 'home'
%div#banner
  = link_to image_tag('banner.png'), root_path    
%div#enter
  %b= link_to image_tag('btn_entersys.png')
%div#login
  %input{:type => "phone"}

= form_for(@bulletin) do |f|
  - if @bulletin.errors.any?
    #error_explanation
      %h2
        = pluralize(@bulletin.errors.count, "error")
        prohibited this bulletin from being saved:
      %ul
        - @bulletin.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :msg
    %br/
    = f.text_field :msg
  .field
    = f.label :date
    %br/
    = f.date_select :date
  .field
    = f.label :deadline
    %br/
    = f.date_select :deadline
  .actions
    = f.submit
